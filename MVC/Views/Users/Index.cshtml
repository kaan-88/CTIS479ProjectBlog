@model IEnumerable<UserModel>

@* Generated from Custom Template. *@
@* Model namespace using directive should be added to _ViewImports.cshtml. *@

@{
    var containerDivClass = "container";
}
@{
    ViewData["Title"] = "User List";
}

<div class="@containerDivClass">
    <h3>@ViewData["Title"]</h3>
    <hr />
</div>

@if (Model is not null)
{
    <form asp-action="Index" autocomplete="off">
        <div class="@containerDivClass">
            <div class="row">
                <div class="col-12 text-danger">
                    @TempData["Message"]
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-10 text-success">
                    @Model.Count() record(s) found.
                </div>
                <div class="col-2 text-end">
                    <a asp-action="Create">Create</a>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead class="table-secondary">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Record.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Record.Password)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Record.IsActive)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Record.Role)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
		            @foreach (var item in Model) {
				        <tr>
					        <td>
                                @Html.DisplayFor(modelItem => item.Record.UserName)
					        </td>
					        <td>
                                @Html.DisplayFor(modelItem => item.Record.Password)
					        </td>
					        <td>
                                @Html.DisplayFor(modelItem => item.Record.IsActive)
                                @*@(item.Record.IsActive ? "Active" : "Inactive")*@
					        </td>
					        <td>
                                @Html.DisplayFor(modelItem => item.Record.Role.Name)
					        </td>
					        <td class="text-end w-25">
                                @*<a href="=/Users/Details/1">Details</a>*@
						        <a asp-action="Details" asp-route-id="@item.Record.Id">Details</a>
                                
                                &nbsp;|&nbsp;

                                @*<a href="=/Users/Edit/1">Edit</a>*@
						        <a asp-action="Edit" asp-route-id="@item.Record.Id">Edit</a>
                                
                                &nbsp;|&nbsp;

                                @*<a href="=/Users/Delete/1">Delete</a>*@
						        <a asp-action="Delete" asp-route-id="@item.Record.Id">Delete</a>
					        </td>
				        </tr>
		            }
                </tbody>
            </table>
        </div>
    </form>
}
